#include<stdio.h>
#include<stdlib.h>
#include<stdbool.h>

void init(int** arr,int size);
void input(int* arr,int size);
int linearSearch(int key, int size, int* arr);

int main()
{
    int s,k;
    int* arr;
    int choice;
    while(1)
    {
        printf("\n---MENU---\n1.Create new array\n2.Find elements\n0.Exit\nMy choice is: ");
        scanf("%d",&choice);
        switch(choice)
        {
            case 1:
                printf("Enter the size of the array: ");
                scanf("%d",&s);
                init(&arr,s);
                printf("\nEnter %d elements:\n",s);
                input(arr,s);
                break;
            case 2:
                printf("\nEnter the number to search: ");
                scanf("%d",&k);
                printf("%d\n",linearSearch(k,s,arr));
                break;
            case 0:
                printf("\nGOOD BYE!!");
                return 0;
                break;
            default:
                printf("\nPlease give valid choice..");
        }

    }
    return 0;
}
void init(int** arr, int size)
{
     *arr = (int*)calloc(size, sizeof(int));
}
void input(int* arr, int size)
{
    for(int i=0;i<size;i++)
    {
        scanf("%d",&arr[i]);
    }
}
/*NORMAL
int linearSearch(int key, int size, int* arr)
{
    int a;
    for(int i=0;i<size;i++)
    {
        if(arr[i]==key)
        {
            a=i;
        }
    }
    return a+1;
}
*/
int linearSearch(int key, int size, int* arr)
{
    int start=0,end=size;
    if(start>size)
    {
        return -1;
    }
    if(arr[start]==key)
    {
        return start+1;
    }
    if(arr[end]==key)
    {
        return end+1;
    }
    else
    {
        linearSearch(key,size-1,arr);
    }
}